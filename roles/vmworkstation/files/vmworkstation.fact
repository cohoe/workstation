#!/bin/bash

BINARY=/usr/bin/vmware

echo -en "{\n\t"
if [ -x $BINARY ]; then
    RAW_VERSION=$($BINARY --version | sed 's/VMware Workstation //')
    VERSION=$(echo $RAW_VERSION | sed 's/ build//')

    echo "\"vmworkstation_version\": \"$VERSION\","
    echo -en "\t"
    echo "\"vmworkstation_present\": true"
else
    echo "\"vmworkstation_present\": false"
fi
echo "}"
